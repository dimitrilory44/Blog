{% extends 'base.html.twig' %}

{% block title %}Build your app{% endblock %}

{% block body %}
    <style>
        @import "https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700";
        body {
            font-family: 'Poppins', sans-serif;
            background: #fafafa;
        }

        p {
            font-family: 'Poppins', sans-serif;
            font-size: 1.1em;
            font-weight: 300;
            line-height: 1.7em;
            color: #999;
        }

        a,
        a:hover,
        a:focus {
            color: inherit;
            text-decoration: none;
            transition: all 0.3s;
        }

        i,
        span {
            display: inline-block;
        }

        /* ---------------------------------------------------
            SIDEBAR STYLE
        ----------------------------------------------------- */

        .wrapper {
            display: flex;
            align-items: stretch;
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            max-height: 530px;
            background: #47748b;
            color: #fff;
            transition: all 0.3s;
        }

        #sidebar.active {
            min-width: 80px;
            max-width: 80px;
            text-align: center;
        }

        #sidebar.active .sidebar-header h3,
        #sidebar.active .CTAs {
            display: none;
        }

        #sidebar.active .sidebar-header strong {
            display: block;
        }

        #sidebar ul li a {
            text-align: left;
        }

        #sidebar.active ul li a {
            padding: 20px 10px;
            text-align: center;
            font-size: 0.85em;
        }

        #sidebar.active ul li a i {
            margin-right: 0;
            display: block;
            font-size: 1.8em;
            margin-bottom: 5px;
        }

        #sidebar.active ul ul a {
            padding: 10px !important;
        }

        #sidebar.active .dropdown-toggle::after {
            top: auto;
            bottom: 10px;
            right: 50%;
            -webkit-transform: translateX(50%);
            -ms-transform: translateX(50%);
            transform: translateX(50%);
        }

        #sidebar .sidebar-header {
            padding: 20px;
            display: inline-flex;
        }

        #sidebar .sidebar-header strong {
            display: none;
            font-size: 1.8em;
        }

        #sidebar ul.components {
            padding-bottom: 1rem;
            border-bottom: 1px solid #47748b;
        }

        #sidebar ul li a {
            padding: 10px;
            font-size: 1.1em;
            display: block;
        }

        #sidebar ul li a:hover {
            color: #47748b;
            background: #fff;
        }

        #sidebar ul li a i {
            margin-right: 10px;
        }

        #sidebar ul li.active>a,
        a[aria-expanded="true"] {
            color: #fff;
            background: #47748b;
        }

        a[data-toggle="collapse"] {
            position: relative;
        }

        .dropdown-toggle::after {
            display: block;
            position: absolute;
            top: 50%;
            right: 20px;
            transform: translateY(-50%);
        }

        ul ul a {
            font-size: 0.9em !important;
            padding-left: 30px !important;
            background: #47748b;
        }

        ul.CTAs a {
            text-align: center;
            font-size: 0.9em !important;
            display: block;
            border-radius: 5px;
            margin-bottom: 5px;
        }
    </style>
    <div class="wrapper mt-3 mb-5">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-primary" style="height:530px">
            <div class="sidebar-header ml-3" style="border-bottom: 1px solid #47748b;">
                <span class="material-icons mt-3" style="width:20px">
                    library_books
                </span>
                <h4 class="ml-3 mt-3">Dashboard</h4>
            </div>
            <ul class="list-unstyled components ml-3 mb-3 mr-4 mt-2">
                <p class="mt-3">Actions</p>
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="#contenuSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Contenus</a>
                    <ul class="collapse list-unstyled" id="contenuSubmenu">
                        <li>
                            <a href="#">Cuisine</a>
                        </li>
                        <li>
                            <a href="#">Ajout</a>
                        </li>
                        <li>
                            <a href="#">Modif</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#boissonSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Boisson</a>
                    <ul class="collapse list-unstyled" id="boissonSubmenu">
                        <li>
                            <a href="#">Test</a>
                        </li>

                    </ul>
                </li>
                <li>
                    <a href="#">Gestion Achat</a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}
